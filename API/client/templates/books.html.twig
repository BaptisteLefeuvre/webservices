{% extends 'base.html.twig' %}

{% block body %}

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Les livres</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-9">
            <div class="row">
              {% if api is not same as(200) %}
                <div class="col-md-12 mt-5 text-center">L'API ne répond pas (Code {{api}}).</div>
              {% else %}
                {% if books|length == 0 %}
                  <div class="col-md-12 mt-5 text-center">{{ api }} Aucun livre n'est disponible</div>
                {% endif%}
                {% for book in books %}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header">
                          <h4 class="my-0 font-weight-normal">{{ book.name }}</h4>
                        </div>
                        <div class="card-body">
                          <ul class="list-unstyled mt-3 mb-4">
                            <li><small>ID: {{ book.id }}</small></li>
                            <li><small>Auteur: {{ book.author }}</small></li>
                            <li><small>Stock dispo: {{ book.stock }}</small></li>
                            <li><small>Prix: {{ book.price }} €</small></li>
                          </ul>
                          {% if book.stock > 0 %}
                            <a href="{{ path('add_book_to_cart', {id:book.id})}}" class="btn btn-sm btn-block btn-outline-primary">Ajouter au pannier</a>
                          {% else %}
                            <a href="#" class="btn btn-sm btn-block btn-outline-primary disabled">En rupture de stock</a>
                          {% endif%}
                        </div>
                    </div>
                </div>
                {% endfor %}
              {% endif%}
            </div>
        </div>
        <div class="col-md-3">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
              <span class="text-muted">Votre pannier</span>
              <span class="badge badge-secondary badge-pill">{{ cart|length }}</span>
            </h4>
            <ul class="list-group mb-3">
                {% for c in cart %}
              <li class="list-group-item d-flex justify-content-between lh-condensed">
                <div>
                  <h6 class="my-0">{{ c.name }}</h6>
                  <small class="text-muted"><a href="{{ path('remove_book_to_cart', {book:c.id})}}">Retirer</a></small>
                </div>
                <span class="text-muted">{{ c.price }} €</span>
              </li>
              {% endfor %}
              <li class="list-group-item d-flex justify-content-between">
                <span>Total (EUR)</span>
                <strong>{{ total }} €</strong>
              </li>
            </ul>
      
            <form class="card p-2">
              <div class="input-group">
                <a href="{{path('validate_cart')}}" class="btn btn-outline-secondary btn-block text-center">Valider le pannier</a>
              </div>
            </form>
          </div>
    </div>


{% endblock %}